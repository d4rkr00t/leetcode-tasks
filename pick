#!/usr/bin/env bash

function pick {
  FILE="$(find ./tasks -type f | shuf -n 1 | sed -e 's/.\/tasks\///')"
  NUM="$(echo $FILE | sed -e 's/[^0-9]//g')"
  SOLVES="$(ls solutions | wc -l)"
  TASKS="$(ls tasks | wc -l)"

  if [[ "$SOLVES" == "$TASKS" ]];
  then
    echo "ðŸŽ‰ Everything is solved!"
    exit 0
  fi

  if [ -f "./solutions/$FILE" ];
  then
      pick
  else
    cp "./tasks/$FILE" "./solutions/$FILE"
    echo -e "âœ…âŒ $NUM\n$(cat solutions.md)" > solutions.md
    echo "Next tasks: $FILE"
    code-insiders "./solutions/$FILE" -r
  fi
}

pick
